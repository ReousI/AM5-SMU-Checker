    <Delete Files="$(TargetPath)" Condition="Exists('$(OutDir)$(AssemblyName).tmp.exe')" />
    <Move SourceFiles="$(OutDir)$(AssemblyName).tmp.exe" DestinationFiles="$(TargetPath)" Condition="Exists('$(OutDir)$(AssemblyName).tmp.exe')" />
